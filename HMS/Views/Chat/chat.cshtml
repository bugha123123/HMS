@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
@{
    // Doctor/Patient
    var userType = Context.Request.Query["userType"];
}
@if (userType == "Doctor")
{
    <div  class=" fixed bottom-0 right-6 w-96 bg-white rounded-t-xl shadow-2xl transition-all duration-300 ease-in-out transform translate-y-full md:translate-y-0">
        <!-- Chat Header -->

        </div>
        <div class="p-4 bg-green-600 rounded-t-xl">
            <div class="flex justify-between items-center">
                <div class="text-white">
                    <h3 class="font-semibold text-lg">John Smith</h3>
                    <div class="flex items-center space-x-2">
                        <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                        <span class="text-sm">Patient • Last Visit: March 15, 2024</span>
                    </div>
                </div>
                <button id="closeChatBtn" class="text-white hover:text-gray-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        </div>

        <!-- Patient Info Banner -->
        <div class="bg-gray-50 p-3 border-b">
            <div class="flex justify-between text-sm text-gray-600">
                <div>Age: 45 • Male</div>
                <div>Appointment: 10:00 AM - 10:30 AM</div>
            </div>
            <div class="text-sm text-gray-600 mt-1">
                Current Medication: Lisinopril 10mg
            </div>
        </div>

        <!-- Chat Messages -->
        <div class="h-80 overflow-y-auto p-4 space-y-4" id="chatMessages">
            <!-- Patient's message -->
           
         
        </div>

        <!-- Quick Response Templates -->
        <div class="p-2 border-t border-b bg-gray-50">
            <div class="flex space-x-2 overflow-x-auto">
                <button class="text-sm bg-white px-3 py-1 rounded border hover:bg-gray-50 whitespace-nowrap">Request Vitals</button>
                <button class="text-sm bg-white px-3 py-1 rounded border hover:bg-gray-50 whitespace-nowrap">Schedule Follow-up</button>
                <button class="text-sm bg-white px-3 py-1 rounded border hover:bg-gray-50 whitespace-nowrap">Send Prescription</button>
                <button class="text-sm bg-white px-3 py-1 rounded border hover:bg-gray-50 whitespace-nowrap">Request Lab Tests</button>
            </div>
        </div>

        <!-- Message Input -->
        <div class="p-4">
            <div class="flex space-x-2">
                <textarea id="messageInput"
                class="flex-1 border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-600 resize-none"
                placeholder="Type your medical advice..."
                rows="1"></textarea>
                <button class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
                    </svg>
                </button>
            </div>
        </div>

}
else if (userType == "Patient")
{
  

    <!-- Chat Popup -->
    <div id="chatPopup" class=" fixed bottom-0 right-6 w-96 bg-white rounded-t-xl shadow-2xl transition-all duration-300 ease-in-out transform translate-y-full md:translate-y-0">
        <!-- Chat Header -->
     
        <div class="p-4 bg-blue-600 rounded-t-xl">
            <div class="flex justify-between items-center">
                <div class="text-white">
                    <h3 class="font-semibold text-lg">Dr. Sarah Johnson</h3>
                    <div class="flex items-center space-x-2">
                        <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                        <span class="text-sm">Primary Care Physician • Available</span>
                    </div>
                </div>
                <button id="closeChatBtn" class="text-white hover:text-gray-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        </div>

        <!-- Appointment Info Banner -->
        <div class="bg-gray-50 p-3 border-b">
            <div class="flex justify-between text-sm text-gray-600">
                <div>Your Appointment: Today</div>
                <div>10:00 AM - 10:30 AM</div>
            </div>
            <div class="text-sm text-gray-600 mt-1">
                Reason: Follow-up for medication review
            </div>
        </div>

        <!-- Chat Messages -->
        <div class="h-80 overflow-y-auto p-4 space-y-4" id="chatMessages">
            <!-- Your message (patient) -->
          
            </div>

       
         
        </div>

        <!-- Quick Actions -->
        <div class="p-2 border-t border-b bg-gray-50">
            <div class="flex space-x-2 overflow-x-auto">
                <button class="text-sm bg-white px-3 py-1 rounded border hover:bg-gray-50 whitespace-nowrap">Request Prescription Refill</button>
                <button class="text-sm bg-white px-3 py-1 rounded border hover:bg-gray-50 whitespace-nowrap">Share Symptoms</button>
                <button class="text-sm bg-white px-3 py-1 rounded border hover:bg-gray-50 whitespace-nowrap">Upload Photo</button>
            </div>
        </div>

        <!-- Message Input -->
        <div class="p-4">
            <div class="flex space-x-2">
                <textarea id="messageInput"
                          class="flex-1 border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600 resize-none"
                          placeholder="Describe your symptoms or concerns..."
                          rows="1"></textarea>
                <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
                    </svg>
                </button>
            </div>
        </div>
 
}



                      <script>

                          // responsive
                        function handleResize() {
      if (window.innerWidth < 640) { 
        chatPopup.classList.add('w-full', 'right-0');
        chatPopup.classList.remove('w-96', 'right-6');
      } else {
        chatPopup.classList.remove('w-full', 'right-0');
        chatPopup.classList.add('w-96', 'right-6');
      }
    }

    window.addEventListener('resize', handleResize);
    handleResize();
                      </script>