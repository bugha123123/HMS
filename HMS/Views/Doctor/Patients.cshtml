@model List<User>


<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<script src="https://unpkg.com/lucide@latest"></script>


<div class="container mx-auto px-4 py-8">
    <header class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Doctor's Dashboard</h1>
        <p class="text-gray-600">Manage your patients</p>
    </header>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-semibold text-gray-800">Patient List</h2>
            <button class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md">
                Today's Appointments
            </button>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Age</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
                        
                        
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200" id="patientList">
                   @foreach (var item in  Model)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@item.UserName</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">@item.Age</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">@item.PhoneNumber</div>
                            </td>
                         
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                               <a asp-action="PatientMedicalRecords" asp-controller="Doctor" asp-route-source="@item.Id">
                                    <button class="bg-purple-100 text-purple-700 hover:bg-purple-200 px-3 py-1 rounded-md">
                                        Medical History
                                    </button>
                                </a>
                               
                              
                             
                             
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


  <script>
    lucide.createIcons();
</script>