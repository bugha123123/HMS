<main class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Patient Management</h1>
        <button class="bg-[#0284c7] text-white px-4 py-2 rounded-lg hover:bg-[#0ea5e9] transition-colors" onclick="document.getElementById('addPatientModal').classList.remove('hidden')">
            Add New Patient
        </button>
    </div>

    <!-- Patient Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-lg font-semibold mb-2">Total Patients</h3>
            <p class="text-3xl font-bold text-[#0284c7]">1,234</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-lg font-semibold mb-2">Active Cases</h3>
            <p class="text-3xl font-bold text-green-600">856</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-lg font-semibold mb-2">Critical Cases</h3>
            <p class="text-3xl font-bold text-red-600">23</p>
        </div>
    </div>

    <!-- Patient Search and Filter -->
    <div class="bg-white p-6 rounded-lg shadow-md mb-8">
        <div class="flex flex-wrap gap-4">
            <div class="flex-1">
                <input type="text" placeholder="Search patients..." class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#0284c7]">
            </div>
            <div class="flex gap-4">
                <select class="px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#0284c7]">
                    <option>All Departments</option>
                    <option>Cardiology</option>
                    <option>Neurology</option>
                    <option>Pediatrics</option>
                </select>
                <select class="px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#0284c7]">
                    <option>All Status</option>
                    <option>Active</option>
                    <option>Discharged</option>
                    <option>Critical</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Patient List -->
    <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="bg-gray-50">
                        <th class="px-4 py-2 text-left">Patient ID</th>
                        <th class="px-4 py-2 text-left">Name</th>
                        <th class="px-4 py-2 text-left">Age</th>
                        <th class="px-4 py-2 text-left">Gender</th>
                        <th class="px-4 py-2 text-left">Department</th>
                        <th class="px-4 py-2 text-left">Doctor</th>
                        <th class="px-4 py-2 text-left">Status</th>
                        <th class="px-4 py-2 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="border-t">
                        <td class="px-4 py-2">P-001</td>
                        <td class="px-4 py-2">John Doe</td>
                        <td class="px-4 py-2">45</td>
                        <td class="px-4 py-2">Male</td>
                        <td class="px-4 py-2">Cardiology</td>
                        <td class="px-4 py-2">Dr. Sarah Wilson</td>
                        <td class="px-4 py-2">
                            <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-sm">Active</span>
                        </td>
                        <td class="px-4 py-2">
                            <button class="text-blue-600 hover:text-blue-800 mr-2">View</button>
                            <button class="text-green-600 hover:text-green-800 mr-2">Edit</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="flex justify-between items-center mt-4">
            <p class="text-gray-600">Showing 1-10 of 1,234 patients</p>
            <div class="flex gap-2">
                <button class="px-3 py-1 border rounded hover:bg-gray-100">Previous</button>
                <button class="px-3 py-1 bg-[#0284c7] text-white rounded">1</button>
                <button class="px-3 py-1 border rounded hover:bg-gray-100">2</button>
                <button class="px-3 py-1 border rounded hover:bg-gray-100">3</button>
                <button class="px-3 py-1 border rounded hover:bg-gray-100">Next</button>
            </div>
        </div>
    </div>
</main>

<!-- Add Patient Modal -->
<div id="addPatientModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg w-full max-w-md">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-bold">Add New Patient</h2>
            <button onclick="this.closest('#addPatientModal').classList.add('hidden')" class="text-gray-500 hover:text-gray-700">
                ✕
            </button>
        </div>
        <form>
            <div class="grid grid-cols-2 gap-4">
                <div class="col-span-2">
                    <label class="block text-gray-700 text-sm font-bold mb-2">Full Name</label>
                    <input type="text" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#0284c7]" required>
                </div>
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2">Age</label>
                    <input type="number" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#0284c7]" required>
                </div>
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2">Gender</label>
                    <select class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#0284c7]" required>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                </div>
                <div class="col-span-2">
                    <label class="block text-gray-700 text-sm font-bold mb-2">Contact Number</label>
                    <input type="tel" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#0284c7]" required>
                </div>
                <div class="col-span-2">
                    <label class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                    <input type="email" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#0284c7]" required>
                </div>
                <div class="col-span-2">
                    <label class="block text-gray-700 text-sm font-bold mb-2">Address</label>
                    <textarea class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#0284c7]" rows="3" required></textarea>
                </div>
            </div>
            <div class="mt-6 flex justify-end gap-4">
                <button type="button" onclick="this.closest('#addPatientModal').classList.add('hidden')" class="px-4 py-2 border rounded hover:bg-gray-100">
                    Cancel
                </button>
                <button type="submit" class="bg-[#0284c7] text-white px-4 py-2 rounded-lg hover:bg-[#0ea5e9] transition-colors">
                    Add Patient
                </button>
            </div>
        </form>
    </div>
</div>