@model Appointment

<div class="min-h-screen py-8 px-4">
    <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="bg-blue-600 px-6 py-4">
            <h1 class="text-2xl font-bold text-white">Appointment Details</h1>
        </div>

        <div class="p-6 space-y-6">
            <!-- Basic Information -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Patient ID</label>
                    <input type="text" value="@Model.PatientId.ToString().Substring(0,10)" disabled
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Doctor ID</label>
                    <input type="number" value="@Model.DoctorId" disabled
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Appointment Date</label>
                    <input type="date" value="@Model.AppointmentDate.ToString("yyyy-MM-dd")" disabled
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Appointment Time</label>
                    <input type="time" value="@Model.AppointmentTime.ToString("HH:mm")" disabled
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                    <select name="status" disabled
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="@Model.Status">@Model.Status</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                    <input type="tel" value="@Model.PhoneNumber" disabled
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Hospital Name</label>
                    <input type="text" value="@Model.HospitalName" disabled
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Is Admin Scheduled</label>
                    <input type="checkbox"
                    @(Model.IsAdminScheduled ?? false ? "checked" : "")
                           disabled
                           class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                </div>


            </div>

            <!-- Notes Section -->
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Reason</label>
                    <textarea name="reason" rows="2" disabled
                              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">@Model.Reason</textarea>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Patient Notes</label>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <textarea name="notes" rows="2" disabled
                                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">@Model.Notes</textarea>
                    }
                    else
                    {
                        <p class="text-gray-500">No patient notes available.</p>
                    }
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Doctor Notes</label>
                    @if (!string.IsNullOrEmpty(Model.DoctorNotes))
                    {
                        <textarea name="doctorNotes" rows="2" disabled
                                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">@Model.DoctorNotes</textarea>
                    }
                    else
                    {
                        <p class="text-gray-500">No doctor notes available.</p>
                    }
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Admin Notes</label>
                    @if (!string.IsNullOrEmpty(Model.AdminNotes))
                    {
                        <textarea name="adminNotes" rows="2" disabled
                                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">@Model.AdminNotes</textarea>
                    }
                    else
                    {
                        <p class="text-gray-500">No admin notes available. </p>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
