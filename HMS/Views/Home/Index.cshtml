@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<header class="bg-blue-600 text-white p-4">
    <nav class="container mx-auto flex justify-between items-center">
        <h1 class="text-2xl font-bold">HMS User Portal</h1>
        <ul class="flex space-x-4">
            @if (User.Identity.IsAuthenticated)
            {
                <li><a asp-action="bookappointment" asp-controller="Home" class="hover:underline">Book Appointment</a></li>
            }
            else
            {
                <li><a asp-action="signin" asp-controller="Auth" class="hover:underline">Sign In</a></li>
            }
            <li><a href="records.html" class="hover:underline">Medical Records</a></li>
            @if (User.Identity.IsAuthenticated)
            {
                <li><a class="hover:underline" asp-action="SignOutUser" asp-controller="Auth">Log out</a></li>
            }
            else
            {
                <li><a class="hover:underline" asp-action="signin" asp-controller="Auth">Sign in</a></li>
            }
        </ul>
    </nav>
</header>

<main class="container mx-auto mt-8 p-4">
    <h2 class="text-3xl font-bold mb-4">Welcome to HMS User Portal</h2>
    <p class="mb-4">Access your medical information, book appointments, and manage your healthcare needs all in one place.</p>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="bg-white p-6 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-2">Book an Appointment</h3>
            <p>Schedule your next visit with just a few clicks.</p>
            @if (User.Identity.IsAuthenticated)
            {
                <a class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" asp-action="bookappointment" asp-controller="Home">Book Now</a>
            }
            else
            {
                <a class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" asp-action="signin" asp-controller="Auth">Sign In to Book</a>
            }
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-2">View Medical Records</h3>
            <p>Access your medical history and test results securely.</p>
            <a href="records.html" class="mt-4 inline-block bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">View Records</a>
        </div>
    </div>
</main>
