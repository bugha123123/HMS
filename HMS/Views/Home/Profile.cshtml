@using HMS.DTO
@using HMS.Interface
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<script src="https://unpkg.com/lucide@latest"></script>
@inject IAuthService _authservice;

@{
    var loggedInUser = await _authservice.GetLoggedInUserAsync();

    var ProfilePictureBase64 = Convert.ToBase64String(loggedInUser.ProfilePicture);
}
<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <header class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800">My Profile</h1>
        <p class="text-gray-600">Manage your account settings and preferences</p>
    </header>

    <!-- Main Content -->
    <div class="bg-white rounded-lg shadow-md ">
        <!-- Profile Header with Image -->

        <div class="bg-gradient-to-r from-blue-500 to-indigo-600 h-48 sm:h-56 md:h-64 flex items-end">
            <div class="relative px-6 pb-20 w-full">
                <div class="absolute bottom-10 left-6">
                    <form asp-action="EditProfile" asp-controller="Home" method="post" enctype="multipart/form-data">
                        <div class="relative group">
                            <!-- Profile Image Container -->
                            <div class="bg-white p-2 rounded-full shadow-lg">
                                <!-- Display Profile Image -->
                                @if (loggedInUser != null && loggedInUser.ProfilePicture != null)
                                {
                                    <img id="profile-image"
                                         src="data:image/jpeg;base64,@ProfilePictureBase64"
                                         alt="Profile"
                                         class="w-32 h-32 sm:w-36 sm:h-36 md:w-40 md:h-40 rounded-full object-cover transition-all duration-300">
                                }
                                else
                                {
                                    <img id="profile-image"
                                         src="https://via.placeholder.com/150"
                                         alt="Profile"
                                         class="w-32 h-32 sm:w-36 sm:h-36 md:w-40 md:h-40 rounded-full object-cover transition-all duration-300">
                                }
                            </div>

                            <!-- Upload Controls -->
                            <div class="absolute -bottom-3 right-2 flex gap-2   transition-all duration-300">
                                <label for="image-upload"
                                       class="bg-gray-800/90 backdrop-blur-sm text-white rounded-full p-2.5 cursor-pointer bg-gray-700 transition shadow-lg">
                                    <i class="fas fa-camera text-lg"></i>
                                    <span class="sr-only">Upload Image</span>
                                </label>

                                <button type="submit" id="save-profile-image"
                                        class="bg-blue-600/90 backdrop-blur-sm text-white rounded-full p-2.5 bg-blue-700 transition shadow-lg">
                                    <i class="fas fa-save text-lg"></i>
                                    <span class="sr-only">Save Image</span>
                                </button>
                            </div>

                            <!-- Upload Input -->
                            <input type="file" id="image-upload" name="profilePicture" class="hidden" accept="image/*" >
                        </div>
                    </form>
                </div>
            </div>
        </div>

     
        <!-- Profile Content -->
        <div class="p-6 pt-12">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Sidebar Navigation -->
                <div class="md:col-span-1">
                    <nav id="profile-nav" class="space-y-1">
                      
                        <a href="#security" class="nav-link flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-50 hover:text-gray-900">
                            <i class="fas fa-lock w-5 h-5 mr-2"></i>
                            Security
                        </a>
                        <a href="#preferences" class="nav-link flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-50 hover:text-gray-900">
                            <i class="fas fa-cog w-5 h-5 mr-2"></i>
                            Preferences
                        </a>
                    </nav>
                </div>

                

                    <!-- Security Section -->
                    <section id="security" class="mb-8 hidden">
                        <h2 class="text-xl  text-gray-800 mb-4">Security</h2>
               
               
                   
                 
                    <form class="space-y-4" asp-action="ChangePassword" asp-controller="Home" method="post">
                        @if (TempData["Success"] != null)
                        {
                            <div class="text-green-500 mb-4">
                                @TempData["Success"]
                            </div>
                        }
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["ErrorMessage"]
                            </div>
                        }
                        <div>
                            <label for="current-password" class="block text-sm font-medium text-gray-700 mb-1">Current Password</label>
                            <input  name="oldPassword" type="password" id="current-password"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <!-- Validation message for OldPassword -->
                         
                        </div>

                        <div>
                            <label for="new-password" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
                            <input type="password" name="newPassword" id="new-password"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <!-- Validation message for NewPassword -->
                        </div>


                        <!-- Submit button -->
                        <div class="pt-2">
                            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                                Update Password
                            </button>
                        </div>
                    </form>

                    </section>

                <!-- Patient Preferences Section -->
                <section id="preferences" class="mb-8 hidden">
                    <h2 class="text-xl   mb-4">Patient Preferences</h2>
                    <form class="space-y-4">
                        <!-- Notification Preferences -->
                        <div>
                            <h3 class="text-md font-medium text-gray-700 mb-2">Health Notifications</h3>
                            <div class="space-y-2">
                                <div class="flex items-start">
                                    <div class="flex items-center h-5">
                                        <input id="appointment-reminders" name="appointment-reminders" type="checkbox" checked
                                               class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                                    </div>
                                    <div class="ml-3 text-sm">
                                        <label for="appointment-reminders" class="font-medium text-gray-700">Appointment Reminders</label>
                                        <p class="text-gray-500">Get notified about upcoming doctor appointments.</p>
                                    </div>
                                </div>
                                <div class="flex items-start">
                                    <div class="flex items-center h-5">
                                        <input id="medication-alerts" name="medication-alerts" type="checkbox" checked
                                               class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                                    </div>
                                    <div class="ml-3 text-sm">
                                        <label for="medication-alerts" class="font-medium text-gray-700">Medication Alerts</label>
                                        <p class="text-gray-500">Receive reminders for your prescribed medications.</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Privacy Preferences -->
                        <div>
                            <h3 class="text-md font-medium text-gray-700 mb-2">Privacy Settings</h3>
                            <div class="space-y-2">
                                <div class="flex items-start">
                                    <div class="flex items-center h-5">
                                        <input id="share-medical-history" name="share-medical-history" type="checkbox"
                                               class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                                    </div>
                                    <div class="ml-3 text-sm">
                                        <label for="share-medical-history" class="font-medium text-gray-700">Share Medical History</label>
                                        <p class="text-gray-500">Allow doctors to access your medical history.</p>
                                    </div>
                                </div>
                                <div class="flex items-start">
                                    <div class="flex items-center h-5">
                                        <input id="enable-anonymous" name="enable-anonymous" type="checkbox"
                                               class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                                    </div>
                                    <div class="ml-3 text-sm">
                                        <label for="enable-anonymous" class="font-medium text-gray-700">Enable Anonymous Mode</label>
                                        <p class="text-gray-500">Hide your personal details in public health forums.</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Communication Preferences -->
                        <div>
                            <h3 class="text-md font-medium text-gray-700 mb-2">Preferred Communication Method</h3>
                            <div class="space-y-2">
                                <div class="flex items-center">
                                    <input id="email" name="communication" type="radio" checked
                                           class="h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500">
                                    <label for="email" class="ml-3 block text-sm font-medium text-gray-700">Email</label>
                                </div>
                                <div class="flex items-center">
                                    <input id="sms" name="communication" type="radio"
                                           class="h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500">
                                    <label for="sms" class="ml-3 block text-sm font-medium text-gray-700">SMS</label>
                                </div>
                                <div class="flex items-center">
                                    <input id="phone-call" name="communication" type="radio"
                                           class="h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500">
                                    <label for="phone-call" class="ml-3 block text-sm font-medium text-gray-700">Phone Call</label>
                                </div>
                            </div>
                        </div>

                        <!-- Save Button -->
                        <div class="pt-2">
                            <button type="submit"
                                    class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                                Save Preferences
                            </button>
                        </div>
                    </form>
                </section>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
    lucide.createIcons();
    // Page-Specific Navigation and Section Toggling
    document.querySelectorAll('#profile-nav a').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();

            // Reset active link styles
            document.querySelectorAll('#profile-nav a').forEach(el => {
                el.classList.remove('bg-blue-50', 'text-blue-700');
                el.classList.add('text-gray-600', 'hover:bg-gray-50', 'hover:text-gray-900');
            });

            // Set the clicked link to active
            this.classList.remove('text-gray-600', 'hover:bg-gray-50', 'hover:text-gray-900');
            this.classList.add('bg-blue-50', 'text-blue-700');

            // Show the corresponding section
            const targetId = this.getAttribute('href').substring(1);
            document.querySelectorAll('section').forEach(section => {
                section.classList.add('hidden');
            });
            document.getElementById(targetId).classList.remove('hidden');
        });
    });

    // Initialize: Show the personal-info section by default
    document.getElementById('security').classList.remove('hidden');


    
</script>

